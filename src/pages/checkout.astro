---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import RegionesYComunas from '../data/chile';

export const prerender = false;
---

<Layout title="Checkout | Pago Seguro">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
    
    <Header />
    <main class="max-w-5xl mx-auto px-6 py-10 md:py-20 font-['Inter',_sans-serif]">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
            
            <div class="lg:col-span-7 space-y-10">
                <div>
                    <h2 class="text-4xl font-[900] uppercase italic tracking-tighter text-black leading-none mb-2">
                        Datos de Envío
                    </h2>
                    <p class="text-[10px] font-black uppercase tracking-[0.3em] text-gray-400">Importación Directa / QC Ready</p>
                </div>
                
                <form id="checkout-form" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-1">
                            <label class="text-[9px] font-black text-gray-400 uppercase tracking-widest ml-1">Primer Nombre</label>
                            <input type="text" name="primer_nombre" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                        </div>
                        <div class="space-y-1">
                            <label class="text-[9px] font-black text-gray-400 uppercase tracking-widest ml-1">Segundo Nombre (Opc)</label>
                            <input type="text" name="segundo_nombre" class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input type="text" name="apellido_paterno" placeholder="APELLIDO PATERNO" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                        <input type="text" name="apellido_materno" placeholder="APELLIDO MATERNO" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input type="text" id="rut-input" name="rut" placeholder="RUT (EJ: 12345678-K)" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                        <input type="email" name="email" placeholder="CORREO ELECTRÓNICO" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <select id="region-select" name="region" required class="custom-select w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-white cursor-pointer appearance-none">
                            <option value="" disabled selected>SELECCIONAR REGIÓN</option>
                            {RegionesYComunas.map((reg) => (
                                <option value={reg.name}>{reg.name.toUpperCase()}</option>
                            ))}
                        </select>

                        <select id="ciudad-select" name="ciudad" required disabled class="custom-select w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-white cursor-pointer appearance-none disabled:opacity-50">
                            <option value="" disabled selected>SELECCIONAR CIUDAD</option>
                        </select>
                    </div>

                    <input type="text" name="direccion" placeholder="DIRECCIÓN EXACTA (CALLE, NÚMERO, DEPTO)" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input type="text" name="postal" placeholder="CÓDIGO POSTAL" class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                        <input type="tel" name="telefono" placeholder="TELÉFONO DE CONTACTO" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                    </div>
                    
                    <div class="pt-8 space-y-4">
                        <h3 class="text-xl font-[900] uppercase italic tracking-tighter text-black ml-1">Método de Pago</h3>
                        <div class="bg-[#f8faff] border border-[#e5edff] rounded-[32px] p-6 flex items-center justify-between shadow-sm">
                            <div class="flex items-center gap-4">
                                <div class="bg-white p-2.5 rounded-2xl shadow-sm border border-gray-50 flex items-center justify-center">
                                    <img src="https://vectorseek.com/wp-content/uploads/2023/08/Mercado-Pago-Icon-Logo-Vector.svg-.png" alt="Mercado Pago" class="h-6 w-auto" />
                                </div>
                                <div>
                                    <p class="text-[#001d61] font-[900] text-xs uppercase italic leading-none tracking-tight">Pago Seguro Encriptado</p>
                                    <p class="text-[#5c77b3] text-[9px] font-bold uppercase tracking-widest mt-1">Crédito, Débito y Webpay</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" id="pay-button" class="w-full bg-black text-white py-7 rounded-[32px] font-[900] uppercase italic tracking-[0.2em] text-[14px] shadow-2xl shadow-black/20 hover:bg-zinc-800 active:scale-[0.98] transition-all mt-6">
                        Pagar con Mercado Pago
                    </button>
                </form>
            </div>

            <div class="lg:col-span-5">
                <div class="bg-zinc-50 p-8 rounded-[50px] h-fit lg:sticky lg:top-24 border border-zinc-100 shadow-sm">
                    <h3 class="text-[10px] font-black uppercase tracking-[0.3em] text-gray-400 mb-8 text-center">Resumen del Pedido</h3>
                    
                    <div id="checkout-products-list" class="space-y-6 mb-10 max-h-[400px] overflow-y-auto pr-2">
                        </div>
                    
                    <div class="border-t-2 border-dashed border-zinc-200 pt-8 flex flex-col items-center">
                        <span class="text-[10px] font-black uppercase tracking-[0.2em] text-gray-400 mb-2">Total Final</span>
                        <span id="sum-price" class="text-5xl font-[900] italic tracking-tighter text-black">$0</span>
                        <p class="text-[8px] text-zinc-400 uppercase font-bold mt-4 tracking-widest">Incluye impuestos e importación</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
<script>
    import { supabase } from '../lib/supabase';
    import RegionesYComunas from '../data/chile';
    import { cartItems } from '../store/cartStore';

    // 1. VARIABLES Y SELECTORES
    const listContainer = document.getElementById('checkout-products-list');
    const totalEl = document.getElementById('sum-price');
    const form = document.getElementById('checkout-form') as HTMLFormElement;
    const payBtn = document.getElementById('pay-button') as HTMLButtonElement;
    const regionSelect = document.getElementById('region-select') as HTMLSelectElement;
    const ciudadSelect = document.getElementById('ciudad-select') as HTMLSelectElement;

    // 2. RENDERIZADO REACTIVO DEL RESUMEN
    // Usamos subscribe para que si el store cambia o tarda en cargar, el checkout se actualice
    (cartItems as any).subscribe((items: any[]) => {
        if (!listContainer || !totalEl) return;

        if (!items || items.length === 0) {
            listContainer.innerHTML = `
                <div class="text-center py-10">
                    <p class="text-[10px] font-black uppercase text-zinc-400 tracking-[0.2em]">El carrito está vacío</p>
                    <a href="/" class="text-[9px] font-black underline mt-4 inline-block">VOLVER A LA TIENDA</a>
                </div>`;
            totalEl.innerText = '$0';
            return;
        }

        listContainer.innerHTML = items.map((item: any) => `
            <div class="flex items-center gap-4 bg-white p-4 rounded-3xl border border-zinc-100 mb-4 animate-in fade-in slide-in-from-right-4">
                <img src="${item.image || item.image_url}" class="w-16 h-16 object-contain rounded-xl" />
                <div class="flex-1">
                    <p class="font-black text-[10px] uppercase text-black leading-tight">${item.name || item.product_name}</p>
                    <div class="flex gap-2 mt-1">
                        <span class="text-[8px] font-black text-zinc-500 bg-zinc-100 px-1.5 py-0.5 rounded uppercase">Talla: ${item.size}</span>
                        <span class="text-[8px] font-black text-white bg-black px-1.5 py-0.5 rounded uppercase">${item.quality}</span>
                    </div>
                    <p class="text-[8px] font-bold text-zinc-400 mt-1 uppercase">Cantidad: ${item.quantity || 1}</p>
                </div>
                <p class="font-black text-xs text-black">$${((item.price) * (item.quantity || 1)).toLocaleString('es-CL')}</p>
            </div>
        `).join('');

        const total = items.reduce((acc: number, item: any) => acc + (item.price * (item.quantity || 1)), 0);
        totalEl.innerText = `$${total.toLocaleString('es-CL')}`;
    });

    // 3. LÓGICA DE PROCESAMIENTO DE PAGO
    form?.addEventListener('submit', async (e: SubmitEvent) => {
        e.preventDefault();
        
        // Obtenemos los items actuales del store
        const currentItems = (cartItems as any).get();

        if (!currentItems || currentItems.length === 0) {
            alert("TU CARRITO ESTÁ VACÍO");
            return;
        }

        if (payBtn) {
            payBtn.disabled = true;
            payBtn.innerHTML = `<span class="animate-pulse">GENERANDO ORDEN SEGURA...</span>`;
        }

        try {
            // A. VALIDAR SESIÓN
            const { data: { session }, error: sessionErr } = await supabase.auth.getSession();
            if (sessionErr) throw new Error("Error de sesión: " + sessionErr.message);
            
            if (!session) {
                alert("DEBES INICIAR SESIÓN PARA FINALIZAR TU PEDIDO.");
                window.location.href = "/login";
                return;
            }

            const formData = new FormData(form);
            const customOrderId = window.crypto.randomUUID();
            const totalAmount = currentItems.reduce((acc: number, item: any) => acc + (item.price * (item.quantity || 1)), 0);

            // B. INSERTAR EN TABLA 'orders' (Acorde a tu esquema de Supabase)
            const { error: orderError } = await supabase.from('orders').insert([{
                id: customOrderId,
                user_id: session.user.id,
                customer_name: `${formData.get('primer_nombre')} ${formData.get('apellido_paterno')}`.toUpperCase(),
                rut: formData.get('rut'),
                address: formData.get('direccion'),
                city: formData.get('ciudad'),
                region: formData.get('region'),
                phone: formData.get('telefono'),
                email: formData.get('email'),
                total_price: totalAmount,
                status: 'Pendiente'
            }]);

            if (orderError) throw orderError;

            // C. INSERTAR EN TABLA 'order_items'
            const itemsToInsert = currentItems.map((item: any) => ({
                order_id: customOrderId,
                product_name: item.name || item.product_name,
                price: item.price,
                size: item.size,
                quality: item.quality,
                image_url: item.image || item.image_url
            }));

            const { error: itemsError } = await supabase.from('order_items').insert(itemsToInsert);
            if (itemsError) throw itemsError;

            // D. LLAMADA A API MERCADO PAGO
            const response = await fetch('/api/create-payment', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    items: currentItems.map((i: any) => ({ 
                        title: i.name || i.product_name, 
                        unit_price: i.price, 
                        quantity: i.quantity || 1,
                        description: `Talla: ${i.size} | Calidad: ${i.quality}`, // Importante para Telegram
                        image_url: i.image || i.image_url
                    })),
                    orderId: customOrderId,
                    customerEmail: formData.get('email') // <--- AGREGAR ESTO
                })
            });

            const result = await response.json();

            if (result.init_point) {
                // Limpiamos el store y el localStorage antes de redirigir
                cartItems.set([]); 
                localStorage.removeItem('amg-cart');
                window.location.href = result.init_point;
            } else {
                throw new Error(result.error || "Error al conectar con Mercado Pago");
            }

        } catch (err: any) {
            console.error("❌ ERROR:", err);
            alert("ERROR AL PROCESAR: " + (err.message || "Intenta nuevamente"));
            
            if (payBtn) {
                payBtn.disabled = false;
                payBtn.innerText = "PAGAR CON MERCADO PAGO";
            }
        }
    });

    // 4. SELECTS DE REGIÓN Y CIUDAD
    regionSelect?.addEventListener('change', () => {
        const reg = RegionesYComunas.find(r => r.name === regionSelect.value);
        if (ciudadSelect && reg) {
            ciudadSelect.innerHTML = '<option value="" disabled selected>SELECCIONAR CIUDAD</option>';
            ciudadSelect.disabled = false;
            reg.communes.sort().forEach(c => {
                const opt = document.createElement('option');
                opt.value = c; 
                opt.textContent = c.toUpperCase();
                ciudadSelect.appendChild(opt);
            });
        }
    });
</script>