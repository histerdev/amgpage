---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import RegionesYComunas from '../data/chile';

export const prerender = false;
---

<Layout title="Checkout | Pago Seguro">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
    
    <Header />
    <main class="max-w-5xl mx-auto px-6 py-10 md:py-20 font-['Inter',_sans-serif]">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
            
            <div class="lg:col-span-7 space-y-10">
                <div>
                    <h2 class="text-4xl font-[900] uppercase italic tracking-tighter text-black leading-none mb-2">
                        Datos de Envío
                    </h2>
                    <p class="text-[10px] font-black uppercase tracking-[0.3em] text-gray-400">Importación Directa / QC Ready</p>
                </div>
                
                <form id="checkout-form" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-1">
                            <label class="text-[9px] font-black text-gray-400 uppercase tracking-widest ml-1">Primer Nombre</label>
                            <input type="text" name="primer_nombre" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                        </div>
                        <div class="space-y-1">
                            <label class="text-[9px] font-black text-gray-400 uppercase tracking-widest ml-1">Apellido Paterno</label>
                            <input type="text" name="apellido_paterno" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input type="text" id="rut-input" name="rut" placeholder="RUT (EJ: 12345678-K)" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                        <input type="email" name="email" placeholder="CORREO ELECTRÓNICO" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <select id="region-select" name="region" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none uppercase text-xs font-bold bg-white">
                            <option value="" disabled selected>SELECCIONAR REGIÓN</option>
                            {RegionesYComunas.map((reg) => (
                                <option value={reg.name}>{reg.name.toUpperCase()}</option>
                            ))}
                        </select>

                        <select id="ciudad-select" name="ciudad" required disabled class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none uppercase text-xs font-bold bg-white disabled:opacity-50">
                            <option value="" disabled selected>SELECCIONAR CIUDAD</option>
                        </select>
                    </div>

                    <input type="text" name="direccion" placeholder="DIRECCIÓN (CALLE, NÚMERO, DEPTO)" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <input type="tel" name="telefono" placeholder="TELÉFONO DE CONTACTO" required class="w-full border-b-2 border-gray-100 py-3 focus:border-black outline-none transition-all uppercase text-xs font-bold tracking-widest bg-transparent" />
                    </div>
                    
                    <button type="submit" id="pay-button" class="w-full bg-black text-white py-7 rounded-[32px] font-[900] uppercase italic tracking-[0.2em] text-[14px] shadow-2xl hover:bg-zinc-800 transition-all mt-6 cursor-pointer">
                        Pagar con Mercado Pago
                    </button>
                </form>
            </div>

            <div class="lg:col-span-5">
                <div class="bg-zinc-50 p-8 rounded-[50px] h-fit lg:sticky lg:top-24 border border-zinc-100 shadow-sm">
                    <h3 class="text-[10px] font-black uppercase tracking-[0.3em] text-gray-400 mb-8 text-center">Resumen del Pedido</h3>
                    
                    <div id="checkout-products-list" class="space-y-6 mb-10 max-h-[400px] overflow-y-auto pr-2">
                        </div>
                    
                    <div class="border-t-2 border-dashed border-zinc-200 pt-8 flex flex-col items-center">
                        <span class="text-[10px] font-black uppercase tracking-[0.2em] text-gray-400 mb-2">Total Final</span>
                        <span id="sum-price" class="text-5xl font-[900] italic tracking-tighter text-black">$0</span>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    import { supabase } from '../lib/supabase';
    import RegionesYComunas from '../data/chile';
    import { cartItems } from '../store/cartStore';

    // 1. VARIABLES
    const listContainer = document.getElementById('checkout-products-list');
    const totalEl = document.getElementById('sum-price');
    const form = document.getElementById('checkout-form') as HTMLFormElement;
    const payBtn = document.getElementById('pay-button') as HTMLButtonElement;
    const regionSelect = document.getElementById('region-select') as HTMLSelectElement;
    const ciudadSelect = document.getElementById('ciudad-select') as HTMLSelectElement;

    // 2. RENDERIZADO REACTIVO
    (cartItems as any).subscribe((items: any[]) => {
        if (!listContainer || !totalEl) return;

        if (!items || items.length === 0) {
            listContainer.innerHTML = `<div class="text-center py-10"><p class="text-[10px] uppercase text-zinc-400">Carrito vacío</p></div>`;
            totalEl.innerText = '$0';
            return;
        }

        listContainer.innerHTML = items.map((item: any) => `
            <div class="flex items-center gap-4 bg-white p-4 rounded-3xl border border-zinc-100 mb-4">
                <img src="${item.image || item.image_url}" class="w-16 h-16 object-contain rounded-xl" />
                <div class="flex-1">
                    <p class="font-black text-[10px] uppercase">${item.name || item.product_name}</p>
                    <span class="text-[8px] font-bold text-zinc-500">Talla: ${item.size} | Cant: ${item.quantity}</span>
                </div>
                <p class="font-black text-xs">$${((item.price) * (item.quantity || 1)).toLocaleString('es-CL')}</p>
            </div>
        `).join('');

        const total = items.reduce((acc: number, item: any) => acc + (item.price * (item.quantity || 1)), 0);
        totalEl.innerText = `$${total.toLocaleString('es-CL')}`;
    });

    // 3. PROCESO DE PAGO
    form?.addEventListener('submit', async (e: SubmitEvent) => {
        e.preventDefault();
        
        const currentItems = (cartItems as any).get();
        if (!currentItems || currentItems.length === 0) return alert("TU CARRITO ESTÁ VACÍO");

        // Bloquear botón
        if (payBtn) {
            payBtn.disabled = true;
            payBtn.innerHTML = `<span class="animate-pulse">PROCESANDO... NO CIERRES</span>`;
        }

        try {
            // A. Validar Sesión
            const { data: { session }, error: sessionErr } = await supabase.auth.getSession();
            if (sessionErr || !session) {
                alert("Debes iniciar sesión.");
                window.location.href = "/login";
                return;
            }

            const formData = new FormData(form);
            const customOrderId = crypto.randomUUID(); // ID único para todo el pedido
            
            // Calcular total exacto
            const totalAmount = currentItems.reduce((acc: number, i: any) => acc + (Number(i.price) * (Number(i.quantity) || 1)), 0);

            // B. Insertar Orden (Cabecera)
            const { error: orderError } = await supabase.from('orders').insert([{
                id: customOrderId,
                user_id: session.user.id,
                customer_name: `${formData.get('primer_nombre')} ${formData.get('apellido_paterno')}`.toUpperCase(),
                rut: formData.get('rut'),
                address: formData.get('direccion'),
                city: formData.get('ciudad'),
                region: formData.get('region'),
                phone: formData.get('telefono'),
                email: formData.get('email'),
                total_price: totalAmount,
                status: 'Pendiente' // Estado inicial
            }]);

            if (orderError) throw new Error("Error creando orden: " + orderError.message);

            // C. Insertar Items (Detalle) - AQUÍ ESTABA EL POSIBLE ERROR
            // Mapeamos explícitamente asegurando tipos de datos
            const itemsToInsert = [];
            
            for (const item of currentItems) {
                // Si el item tiene cantidad > 1, creamos filas individuales o una fila con cantidad? 
                // MercadoPago prefiere items separados, pero Supabase depende de tu modelo.
                // Asumiremos 1 fila por tipo de producto (tu esquema no muestra columna 'quantity' en order_items, 
                // si compras 2 del mismo, deberías insertar 2 filas o agregar columna quantity).
                // Por seguridad, insertamos N filas si quantity > 1 para que el conteo sea real en DB.
                
                const qty = item.quantity || 1;
                for (let q = 0; q < qty; q++) {
                    itemsToInsert.push({
                        order_id: customOrderId, // Vinculamos con la cabecera
                        product_name: item.name || item.product_name,
                        price: item.price,
                        size: item.size,
                        quality: item.quality,
                        image_url: item.image || item.image_url
                    });
                }
            }

            const { error: itemsError } = await supabase.from('order_items').insert(itemsToInsert);
            
            if (itemsError) {
                console.error("Error insertando items:", itemsError);
                throw new Error("Error guardando productos del pedido.");
            }

            // D. Crear Preferencia Mercado Pago
            const response = await fetch('/api/create-payment', { // Asegura que esta ruta coincida con tu archivo
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    items: currentItems.map((i: any) => ({
                        id: i.id || 'ITEM',
                        title: i.name || i.product_name,
                        unit_price: Number(i.price),
                        quantity: Number(i.quantity || 1),
                        description: `Talla: ${i.size} - ${i.quality}`,
                        image_url: i.image || i.image_url
                    })),
                    orderId: customOrderId,
                    customerEmail: formData.get('email')
                })
            });

            const result = await response.json();

            if (result.init_point) {
                // E. VACIAR CARRITO ANTES DE REDIRIGIR
                // Limpiamos el Store de Astro
                cartItems.set([]); 
                
                // Limpiamos LocalStorage explícitamente (clave por defecto de nanostores o la tuya manual)
                localStorage.removeItem('amg-cart'); 
                
                // Forzamos un pequeño delay para asegurar que el storage se limpie antes del redirect
                setTimeout(() => {
                    window.location.href = result.init_point;
                }, 100);
            } else {
                throw new Error("No se pudo conectar con Mercado Pago");
            }

        } catch (err: any) {
            console.error(err);
            alert("OCURRIÓ UN ERROR: " + err.message);
            if (payBtn) {
                payBtn.disabled = false;
                payBtn.innerText = "PAGAR CON MERCADO PAGO";
            }
        }
    });

    // 4. Lógica de Selects (Región/Ciudad) - Se mantiene igual
    regionSelect?.addEventListener('change', () => {
        const reg = RegionesYComunas.find(r => r.name === regionSelect.value);
        if (ciudadSelect && reg) {
            ciudadSelect.innerHTML = '<option value="" disabled selected>SELECCIONAR CIUDAD</option>';
            ciudadSelect.disabled = false;
            reg.communes.sort().forEach(c => {
                const opt = document.createElement('option');
                opt.value = c;
                opt.textContent = c.toUpperCase();
                ciudadSelect.appendChild(opt);
            });
        }
    });
</script>