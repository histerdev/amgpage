---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
export const prerender = false;
---

<Layout title="Mis Pedidos | AMG">
    <Header />
    <main class="max-w-5xl mx-auto px-6 py-20 font-['Inter'] text-black">
        <h1 class="text-5xl font-[900] uppercase italic tracking-tighter mb-12">Mis Pedidos</h1>
        <div id="orders-list" class="space-y-12"></div>
    </main>
</Layout>

<script>
    import { supabase } from '../lib/supabase';

    interface OrderItem {
        id: string;
        product_name: string;
        size: string;
        quality: string;
        image_url: string;
        qc_images: string[] | null;
        item_notes: string | null;
    }

    interface Order {
        id: string;
        status: string;
        client_decision: string | null;
        created_at: string;
        order_items: OrderItem[];
    }

    async function loadOrders() {
        const { data: { session } } = await supabase.auth.getSession();
        if (!session) return;

        const { data: orders, error } = await supabase
            .from('orders')
            .select(`
                *,
                order_items (
                    id, product_name, size, quality, image_url, qc_images, item_notes
                )
            `)
            .eq('user_id', session.user.id)
            .order('created_at', { ascending: false });

        const list = document.getElementById('orders-list');
        if (error || !orders || !list) return;

        list.innerHTML = (orders as Order[]).map((order: Order) => `
            <div class="bg-white rounded-[40px] border border-gray-100 shadow-xl overflow-hidden mb-8">
                <div class="p-6 bg-black text-white flex justify-between items-center">
                    <span class="text-[10px] font-black uppercase italic text-[#2ecc71]">${order.status}</span>
                    <span class="text-[10px] font-black opacity-40">#${order.id.slice(0,8)}</span>
                </div>

                <div class="p-8 space-y-8">
                    ${order.order_items.map((item: OrderItem) => `
                        <div class="grid md:grid-cols-2 gap-6 border-b border-gray-50 pb-8 last:border-0 last:pb-0">
                            <div class="flex gap-4">
                                <img src="${item.image_url}" class="w-24 h-24 object-contain bg-gray-50 rounded-2xl" />
                                <div>
                                    <h3 class="font-black uppercase italic text-sm">${item.product_name}</h3>
                                    <p class="text-[9px] font-bold text-gray-400">TALLA: ${item.size}</p>
                                    <div class="mt-2 p-3 bg-zinc-50 rounded-xl italic text-[11px] text-zinc-500">
                                        "${item.item_notes || 'Sin mensaje adicional.'}"
                                    </div>
                                </div>
                            </div>
                            <div class="grid grid-cols-4 gap-2">
                                ${(item.qc_images || []).map((img: string) => `
                                    <a href="${img}" target="_blank" class="aspect-square rounded-lg overflow-hidden">
                                        <img src="${img}" class="w-full h-full object-cover" />
                                    </a>
                                `).join('') || '<p class="col-span-4 text-[9px] uppercase font-black text-gray-300 py-10 text-center">QC en proceso...</p>'}
                            </div>
                        </div>
                    `).join('')}
                </div>

                <div class="p-6 bg-zinc-50 flex justify-center border-t border-gray-100">
                    ${!order.client_decision ? `
                        <div class="flex gap-4">
                            <button onclick="window.makeDecision('${order.id}', 'Confirmado')" class="bg-black text-white px-8 py-3 rounded-full font-black uppercase italic text-[10px]">Aprobar Todo</button>
                            <button onclick="window.makeDecision('${order.id}', 'Reembolso')" class="border border-red-200 text-red-500 px-8 py-3 rounded-full font-black uppercase italic text-[10px]">Reembolso</button>
                        </div>
                    ` : `
                        <p class="font-black uppercase italic text-sm">Decisi√≥n: ${order.client_decision}</p>
                    `}
                </div>
            </div>
        `).join('');
    }

    (window as any).makeDecision = async (id: string, decision: string) => {
        await supabase.from('orders').update({ client_decision: decision }).eq('id', id);
        location.reload();
    };

    loadOrders();
</script>