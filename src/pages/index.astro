<script>
  function randomBetween(min: number, max: number): number {
    return Math.floor(Math.random() * (max - min + 1)) + min;
  }

  const tickerEl = document.getElementById('viewer-count');
  if (tickerEl) {
    // Initial random value
    tickerEl.textContent = String(randomBetween(8, 24));

    // Update every 45‚Äì90 seconds with slight variation
    function updateTicker() {
      const current = parseInt(tickerEl!.textContent || '12', 10);
      // Drift ¬±3 from current, clamped to [5, 30]
      const drift = randomBetween(-3, 3);
      const next  = Math.max(5, Math.min(30, current + drift));
      tickerEl!.textContent = String(next);

      // Schedule next update
      setTimeout(updateTicker, randomBetween(45_000, 90_000));
    }
    setTimeout(updateTicker, randomBetween(45_000, 90_000));
  }
</script>
