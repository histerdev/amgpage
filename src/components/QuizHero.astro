---
// QuizHero.astro
---
<section class="pb-20 bg-[#0A0A0A]">
  <div class="max-w-4xl mx-auto px-6">
    <div class="bg-[#0D1F10] border border-[#16A34A]/20 rounded-sm p-6 md:p-8 text-center relative overflow-hidden">
      <!-- Decor -->
      <div class="absolute -top-10 -right-10 w-32 h-32 bg-[#16A34A] blur-[60px] opacity-[0.15] pointer-events-none"></div>
      
      <p class="text-[10px] font-bold text-[#16A34A] uppercase tracking-[0.3em] mb-3 relative z-10">Buscador Inteligente</p>
      <h2 class="text-2xl md:text-3xl font-bold text-[#F5F5F5] relative z-10 mb-8" style="font-family: 'Space Grotesk', sans-serif;">
        Encontremos tu próximo par
      </h2>

      <!-- Quiz Form (Micro-commitment) -->
      <form action="/coleccion" method="GET" class="relative z-10 flex flex-col md:flex-row gap-4 items-center justify-center">
        <!-- Q1 -->
        <select name="modelo" class="w-full md:w-auto bg-[#111111] border border-[#2A2A2A] text-[#F5F5F5] text-xs px-4 py-3.5 rounded-sm focus:outline-none focus:border-[#16A34A] transition-colors appearance-none cursor-pointer">
          <option value="">¿Qué modelo buscas?</option>
          <option value="jordan-1">Jordan 1</option>
          <option value="jordan-3">Jordan 3</option>
          <option value="jordan-4">Jordan 4</option>
          <option value="yeezy">Yeezy / Otros</option>
        </select>
        
        <!-- Q2 -->
        <select name="talla" class="w-full md:w-auto bg-[#111111] border border-[#2A2A2A] text-[#F5F5F5] text-xs px-4 py-3.5 rounded-sm focus:outline-none focus:border-[#16A34A] transition-colors appearance-none cursor-pointer">
          <option value="">¿Talla que usas (EU)?</option>
          <option value="40">40</option>
          <option value="41">41</option>
          <option value="42">42</option>
          <option value="43">43</option>
          <option value="44">44 o más</option>
        </select>

        <!-- Q3 -->
        <select name="presupuesto" class="w-full md:w-auto bg-[#111111] border border-[#2A2A2A] text-[#F5F5F5] text-xs px-4 py-3.5 rounded-sm focus:outline-none focus:border-[#16A34A] transition-colors appearance-none cursor-pointer">
          <option value="">¿Tu presupuesto?</option>
          <option value="low">Hasta $90.000</option>
          <option value="mid">$90k - $110k</option>
          <option value="high">Más de $110.000</option>
        </select>

        <button type="submit" class="w-full md:w-auto bg-[#16A34A] hover:bg-[#22C55E] text-black font-bold uppercase tracking-widest text-[10px] px-6 py-3.5 rounded-sm transition-colors cursor-pointer flex-shrink-0">
          Ver mis opciones →
        </button>
      </form>
    </div>
  </div>
</section>

<style>
  select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23888888' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.5rem center;
    background-repeat: no-repeat;
    background-size: 1.5em 1.5em;
    padding-right: 2.5rem;
  }
</style>
