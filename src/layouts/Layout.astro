---
import Header from '../components/Header.astro';
import Footer from '../components/footer.astro';
import CartDrawer from '../components/CartDrawer.astro';
import '@fontsource/inter/400.css';
import '@fontsource/inter/700.css';
import '@fontsource/inter/900.css';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
  ogType?: 'website' | 'product';
  noIndex?: boolean;
  jsonLd?: Record<string, unknown>;
}

const siteUrl = 'https://amgpage.vercel.app';

const {
  title,
  description = 'AMG Sneakers — Gestión de sneakers premium en Chile. Calidad PK y G5 con inspección QC real antes del envío.',
  ogImage = '/logo-amg.webp',
  canonical = new URL(Astro.url.pathname, siteUrl).href,
  ogType = 'website',
  noIndex = false,
  jsonLd,
} = Astro.props;

const fullTitle = `${title} | AMG Sneakers`;
const fullOgImage = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;

// Datos estructurados por defecto (Organization)
const defaultJsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "AMG Sneakers",
  "url": siteUrl,
  "logo": `${siteUrl}/logo-amg.webp`,
  "description": "Gestión de sneakers premium en Chile con inspección QC real antes del envío.",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Santiago",
    "addressCountry": "CL"
  },
  "sameAs": []
};

const structuredData = jsonLd || defaultJsonLd;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{fullTitle}</title>

  <!-- SEO -->
  <meta name="description" content={description} />
  <link rel="canonical" href={canonical} />
  {noIndex && <meta name="robots" content="noindex, nofollow" />}

  <!-- Open Graph -->
  <meta property="og:type" content={ogType} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={fullOgImage} />
  <meta property="og:url" content={canonical} />
  <meta property="og:site_name" content="AMG Sneakers" />
  <meta property="og:locale" content="es_CL" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={fullOgImage} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <!-- Datos Estructurados (JSON-LD) -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
</head>
<body class="fonts-loading">
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
  <CartDrawer />
</body>
</html>

<style is:global>
  .fonts-loading {
    opacity: 0;
  }
  .fonts-ready {
    opacity: 1;
    transition: opacity 0.1s ease-in;
  }
</style>

<script>
  async function waitForFonts() {
    try {
      await document.fonts.ready;
      document.body.classList.remove('fonts-loading');
      document.body.classList.add('fonts-ready');
    } catch {
      document.body.classList.remove('fonts-loading');
      document.body.classList.add('fonts-ready');
    }
  }

  const fallbackTimeout = setTimeout(() => {
    document.body.classList.remove('fonts-loading');
    document.body.classList.add('fonts-ready');
  }, 800);

  waitForFonts().then(() => clearTimeout(fallbackTimeout));
</script>