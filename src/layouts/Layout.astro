---
import Header from '../components/Header.astro';
import Footer from '../components/footer.astro';
import '@fontsource/inter/400.css';
import '@fontsource/inter/700.css';
import '@fontsource/inter/900.css';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | AMG Sneakers</title>
  
  <!-- Meta tags -->
  <meta name="description" content="AMG Sneakers - Réplicas premium de calidad. PK e G5 certificados. Envío a toda Chile." />
  <meta property="og:title" content={title} />
  <meta property="og:description" content="AMG Sneakers - Réplicas premium de calidad" />
  <meta property="og:image" content="https://amgpage.vercel.app/og-image.png" />
  <meta name="twitter:card" content="summary_large_image" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Preconnect para Google Fonts (ya no necesarios con @fontsource) -->
  <meta http-equiv="x-ua-compatible" content="IE=edge" />
</head>
<body>
  <Header />
  <slot />
  <Footer />
  
  <style is:global>
    * {
      scrollbar-width: thin;
      scrollbar-color: #000 #f5f5f5;
    }

    *::-webkit-scrollbar {
      width: 8px;
    }

    *::-webkit-scrollbar-track {
      background: #f5f5f5;
    }

    *::-webkit-scrollbar-thumb {
      background: #000;
      border-radius: 4px;
    }

    *::-webkit-scrollbar-thumb:hover {
      background: #333;
    }
  </style>
</body>
</html>